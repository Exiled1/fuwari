---
import { getTagList } from "../../utils/content-utils";
import TagsWidget from "./Tags.svelte";

const tags = await getTagList();

interface Props {
	class?: string;
	style?: string;
}
const className = Astro.props.class;
const style = Astro.props.style;
---
<TagsWidget tags={tags} client:idle class={className} style={style} />